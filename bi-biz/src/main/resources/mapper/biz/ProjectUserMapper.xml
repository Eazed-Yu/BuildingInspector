    <select id="selectUserIdsByProjectAndRole" resultType="java.lang.Long">
        SELECT user_id
        FROM bi_project_user
        WHERE project_id = #{projectId}
        and role = #{role}
    </select>


    <select id="selectUsersByProjectAndRole" resultType="com.ruoyi.common.core.domain.entity.SysUser">
        SELECT
            u.user_id,
            u.dept_id,
            u.login_name,
            u.user_name,
            u.user_type,
            u.email,
            u.phonenumber,
            u.sex,
            u.avatar,
            u.status
        FROM
            bi_project_user p
                INNER JOIN
            sys_user u ON p.user_id = u.user_id
        WHERE
            p.project_id = #{projectId}
          AND p.role = #{role}
          AND u.del_flag = '0'
          AND u.status = '0'
    </select>

    <select id="countProjectUser" resultType="java.lang.Integer">
        select count(1)
        from bi_project_user
        where project_id = #{projectId}
    </select>

    <insert id="saveProjectUser">
        insert into bi_project_user (project_id, user_id, role)
        values
        <foreach collection="inspectorIds" item="inspectorId" separator=",">
            (#{projectId}, #{inspectorId}, #{role})
        </foreach>
    </insert>

    <delete id="deleteProjectUser">
        delete from bi_project_user where project_id = #{projectId}
    </delete>

</mapper>